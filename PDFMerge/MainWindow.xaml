<Window x:Class="PDFMerge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFMerge"
        mc:Ignorable="d"
        Title="PDFMerger" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="269" Margin="10,58,0,0" VerticalAlignment="Top" Width="774"/>
        <Label x:Name="label" Content="soubory PDF, které chcete spojit. Seznam vybraných souborů:" HorizontalAlignment="Left" Margin="79,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.838,0.533"/>
        <Button x:Name="btn_mergePDFs" Content="Spojit PDF" HorizontalAlignment="Left" Margin="354,356,0,0" VerticalAlignment="Top" Width="106" Height="29" Click="Btn_mergePDFs_Click"/>
        <Button x:Name="btn_selectInputFiles" Content="Vyberte" HorizontalAlignment="Left" Margin="4,30,0,0" VerticalAlignment="Top" Width="75" Click="Btn_selectInputFiles_Click"/>

    </Grid>
</Window>
